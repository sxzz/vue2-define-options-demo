{
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "skipLibCheck": true
  },
  "vueCompilerOptions": {
    "experimentalCompatMode": 2
  },
  "include": ["vite.config.*"]
}
